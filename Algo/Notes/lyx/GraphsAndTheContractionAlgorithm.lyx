\begin_layout Subsubsection
All Iterations
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
Pr[\lnot S_{1}\cap\lnot S_{2}\cap\lnot S_{3}\cap\dots\cap\lnot S_{n-2}] & =\\
Pr[\lnot S_{1}]Pr[\lnot S_{2}|\lnot S_{1}]Pr[\lnot S_{3}|\lnot S_{1}\cap\lnot S_{2}]\cdot\dots\cdot Pr[\lnot S_{n-2}|\lnot S_{1}\cap\dots\cap\lnot S_{n-1}] & \ge\\
(1-\frac{2}{n})(1-\frac{2}{n-1})(1-\frac{2}{n-2})\dots(1-\frac{1}{n-(n-4)})(1-\frac{1}{n-(n-3)} & =\\
\frac{n\not-2}{n}\frac{n\not-3}{n-1}\frac{n\not-4}{n\not-2}\dots\frac{2}{\not4}\frac{1}{\not3} & =\\
\frac{2}{n(n-1)} & \ge & \frac{1}{n^{2}}
\end{eqnarray*}

\end_inset


\end_layout

